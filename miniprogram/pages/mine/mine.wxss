page {
  height: 100%;
  display: flex;
  flex-direction: column;
  background: linear-gradient(152.59deg, rgba(255, 255, 255, 0.6) 15%, rgba(171, 173, 191, 0.589) 85%),
  linear-gradient(153.27deg, rgba(255, 255, 255, 0.6) 18.08%, rgba(230, 232, 237, 0.473) 52.95%);
}

.background-image {
  position: absolute;
  width: 300px;
  height: 400px;
  top: 300px;
  right: 0;
  z-index: -1;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.arrow-left{
  height: 28px;
  width: 28px;
  margin-top: 8%;
  margin-left: 2%;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #aaa;
  width: 90%;
  margin: auto;
  margin-top: 5%;
}

.userinfo-avatar {
  width: 200px;
  height: 200px;
  border-radius: 50%;
}

.userinfo-nickname {
  margin-top: 3%;
  font-size: 20px;
  color:rgb(85, 83, 83);
}

.line{
  width: 80%;
  height: 2px;
  background: linear-gradient(90deg, #000000 1.0%, #9A9A9A 70%);
  margin: auto;
}
