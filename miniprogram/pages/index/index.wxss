page {
  font-family: Arial, sans-serif;
  margin: 0;
  padding: 0;
  position: relative;
  background: linear-gradient(152.59deg, rgba(255, 255, 255, 0.6) 15%, rgba(171, 173, 191, 0.589) 85%),
  linear-gradient(153.27deg, rgba(255, 255, 255, 0.6) 18.08%, rgba(230, 232, 237, 0.473) 52.95%);
}

.page-background {
  position: relative; /* 确保子元素的绝对定位是相对于该元素 */
  width: 100%; /* 容器宽度，根据需要调整 */
  height: 100%; /* 容器高度，根据需要调整 */
}

.background-image {
  position: absolute;
  width: 300px;
  height: 400px;
  top: 300px;
  right: 0;
  z-index: -1;
}

.navbar {
  display: flex;
  justify-content: space-around;
  padding: 5px;
}

.title {
  font-size: 18px;
  text-align: center;
  color: #00093b63;
}
.title.active{
  color: #29354F;
}

.dot {
  width: 8px; /* 圆点大小 */
  height: 8px; /* 圆点大小 */
  border-radius: 5px; /* 圆点半径 */
  background-color: #00093B38; /* 非活动圆点颜色 */
  margin: 0 5px; /* 圆点间隔 */
}
.dot.active {
  background-color: #29354F;
}

.card {
  background: white;
  border-radius: 20px;
  margin: 20% 10%;
  padding: 20px;
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(0, 0, 0, 0.1); /* 边框颜色和透明度根据设计稿调整 */
  display: flex;
  align-items: center; 
}
.card image {
  height: 128px;
  width: 128px;
  margin-right: 20px;
}
.card-text {
  color: grey;
  font-size: 26px;
}

